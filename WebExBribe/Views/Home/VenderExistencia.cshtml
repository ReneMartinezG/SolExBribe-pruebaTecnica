
@{
    ViewBag.Title = "VenderExistencia";
}

<h2>VenderExistencia</h2>

<form action="/Home/VenderExistencia">
    <input type="hidden" name="id" value="@Model.id" />
    <input type="hidden" name="idSucursal" value="@Model.idSucursal" />
    <input type="hidden" name="idProducto" value="@Model.idProducto" />

    <div class="mb-3">
        <label class="form-label">Cantidad Actual de Existencias</label>
        <input type="text" name="cantidad" value="@Model.cantidad" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Cantidad de productos vendidos</label>
        <input type="number" name="cantidadNueva" class="form-control" value="" />
    </div>

    <input type="submit" value="Confirmar" class="btn btn-primary" />
</form>